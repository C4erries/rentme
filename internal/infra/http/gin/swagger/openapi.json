{
  "openapi": "3.0.3",
  "info": {
    "title": "RentMe API",
    "description": "HTTP interface for requesting bookings and inspecting listing availability.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/",
      "description": "Local server"
    }
  ],
  "paths": {
    "/livez": {
      "get": {
        "summary": "Liveness probe",
        "responses": {
          "200": {
            "description": "Service is alive"
          }
        }
      }
    },
    "/readyz": {
      "get": {
        "summary": "Readiness probe",
        "responses": {
          "200": {
            "description": "Service is ready"
          },
          "503": {
            "description": "Service is not ready"
          }
        }
      }
    },
    "/api/v1/bookings": {
      "post": {
        "summary": "Request booking",
        "description": "Creates a tentative booking for a listing. Provide `Idempotency-Key` header to safely retry the same request.",
        "parameters": [
          {
            "name": "Idempotency-Key",
            "in": "header",
            "schema": {
              "type": "string"
            },
            "required": false,
            "description": "Unique value identifying this booking request."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookingRequest"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Booking accepted for processing",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookingResult"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request payload"
          }
        }
      }
    },
    "/api/v1/bookings/{id}/accept": {
      "post": {
        "summary": "Accept booking",
        "description": "Marks the booking as accepted. Currently not implemented in this demo build.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Booking accepted"
          },
          "501": {
            "description": "Not implemented"
          }
        }
      }
    },
    "/api/v1/listings/{id}/calendar": {
      "get": {
        "summary": "Get availability calendar",
        "description": "Returns reserved and blocked periods for a listing.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "from",
            "in": "query",
            "required": false,
            "description": "Start date (RFC 3339).",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "to",
            "in": "query",
            "required": false,
            "description": "End date (RFC 3339).",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Calendar retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Calendar"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BookingRequest": {
        "type": "object",
        "required": [
          "listing_id",
          "guest_id",
          "check_in",
          "check_out",
          "guests"
        ],
        "properties": {
          "listing_id": {
            "type": "string",
            "example": "listing-demo-1"
          },
          "guest_id": {
            "type": "string",
            "example": "guest-123"
          },
          "check_in": {
            "type": "string",
            "format": "date-time"
          },
          "check_out": {
            "type": "string",
            "format": "date-time"
          },
          "guests": {
            "type": "integer",
            "minimum": 1,
            "example": 2
          }
        }
      },
      "BookingResult": {
        "type": "object",
        "properties": {
          "booking_id": {
            "type": "string",
            "example": "8f6a32aa-3c17-4aea-b5a0-07ed9a902e24"
          }
        }
      },
      "Calendar": {
        "type": "object",
        "properties": {
          "listing_id": {
            "type": "string"
          },
          "blocks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CalendarBlock"
            }
          }
        }
      },
      "CalendarBlock": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string",
            "format": "date-time"
          },
          "to": {
            "type": "string",
            "format": "date-time"
          },
          "reason": {
            "type": "string",
            "example": "BOOKING"
          }
        }
      }
    }
  }
}
